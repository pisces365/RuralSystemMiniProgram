.order {
  width: 700rpx;
  background-color: #ffffff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
  padding-top: 8rpx;
  padding-bottom: 0;
  font-size: 28rpx;
}
.order .top {
  display: flex;
  justify-content: space-between;
}
.order .top .left {
  display: flex;
  align-items: center;
}
.order .top .left .store {
  margin: 0 10rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.order .top .right {
  margin-right: 20rpx;
}
.order .top .right .progressBox {
  width: 60rpx;
  float: right;
}
.order .top .right .border1 {
  border-radius: 10rpx;
  background-color: rgba(24, 181, 102, 0.1);
  color: #18b566;
  padding: 4rpx 6rpx;
}
.order .top .right .border2 {
  border-radius: 10rpx;
  background-color: rgba(242, 145, 0, 0.1);
  color: #f29100;
  padding: 4rpx 6rpx;
}
.order .top .right .border3 {
  border-radius: 10rpx;
  background-color: rgba(130, 132, 138, 0.1);
  color: #82848a;
